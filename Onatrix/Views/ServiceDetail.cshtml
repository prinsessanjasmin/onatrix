@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{
	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/PageHeader" model="(IPageHeader)Model" />

<section class="py-[7rem]">
	<div class="content">
		<div class="flex flex-row justify-between">
			<aside class="w-3/12 flex flex-col gap-4">
				@Html.GetBlockListHtml(Model.ServiceDetailAsides)
			</aside>
			<div class="block w-px bg-border"></div>
			<div class="w-8/12 flex flex-col gap-2 rte">
				@Html.Raw(Model.ServiceDetailBody)
			</div>
		</div>
	</div>
</section>