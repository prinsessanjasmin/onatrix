@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{
	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/PageHeader"/>

<section class="py-[4rem]">
	<div class="content flex flex-col">
		<div class="flex flex-col lg:flex-row justify-between">
			<aside class="hidden lg:w-3/12 lg:flex flex-col gap-4">
				@Html.GetBlockListHtml(Model.ServiceDetailAsides)
			</aside>
			<div class="block w-px bg-border"></div>
			<div class="lg:w-8/12 flex flex-col gap-2 rte">
				@Html.Raw(Model.ServiceDetailBody)
			</div>			
		</div>
	</div>
</section>
@Html.GetBlockListHtml(Model.Sections)