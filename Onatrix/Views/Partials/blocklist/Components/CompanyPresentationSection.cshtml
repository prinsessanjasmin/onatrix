@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	var content = (ContentModels.CompanyPresentationSection)Model.Content;
}

<section class="relative py-[7rem]">
	<div class="container content flex flex-row gap-8 relative z-10">
		<div class="w-4/12 flex flex-col">
			<img class="w-full object-cover" src="@content.CompanyPresentationImage?.Url()" alt="@content.CompanyPresentationImageCaption"/> 
			<p class="italic">@content.CompanyPresentationImageCaption</p>
		</div>
		<div class="w-8/12 flex flex-col rte">
			@Html.Raw(content.CompanyPresentationText)
		</div>
	</div>
</section>