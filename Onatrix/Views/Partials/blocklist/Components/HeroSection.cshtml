@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative py-[1rem] md:py-[2rem] lg:py-[7rem] bg-gradient-to-r from-tertiary via-secondary to-light-grey">
	<div class="hidden md:block absolute inset-0">
		<img class="w-full h-full md:object-[60%_75%] object-cover" src="@content.HeroImage?.Url()" alt="" />
	</div>
	<div class="container content relative z-10">
		<div class="md:w-5/12 flex flex-col gap-6 lg:gap-8 items-center md:items-start">
			<h1 class="hero-title">@content.HeroTitle</h1>
			<p class="text-lg text-primary text-center md:text-left">@content.HeroText</p>
			<div class="bg-primary px-10 py-4 rounded-sm flex justify-center max-w-max">
				<a href="@content.HeroLink?.Url">
					<p class="text-secondary font-bold">@content.HeroLink?.Name</p>
				</a>
			</div>
		</div>
	</div>
</section>