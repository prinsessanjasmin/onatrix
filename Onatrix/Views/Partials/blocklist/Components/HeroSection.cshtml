@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative py-[7rem]">
	<div class="absolute inset-0">
		<img class="w-full h-full object-cover" src="@content.HeroImage?.Url()" alt="" />
	</div>
	<div class="container content relative z-10">
		<div class="w-5/12 flex flex-col gap-8">
			<h1 class="hero-title">@content.HeroTitle</h1>
			<div>@Html.Raw(content.HeroText)</div>
			<div class="bg-primary px-10 py-4 rounded-sm flex w-4/12">
				<a href="@content.HeroLink?.Url">
					<p class="text-secondary font-bold">@content.HeroLink?.Name</p>
				</a>
			</div>
		</div>
	</div>
</section>