@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	var content = (ContentModels.ReviewSection)Model.Content;
	var settings = Model.Settings as ContentModels.ReviewSettings;

	var sectionColor = settings?.ReviewBackgroundColor?.Color ?? "white";
}

<section class="relative py-[2rem] lg:py-[7rem]" style="background-color: @(sectionColor);">
	<div class="container content relative flex flex-col lg:flex-row gap-4 lg:gap-8">
		<div class="lg:w-6/12 flex flex-col gap-4">
			@if (settings!.ShowReviewLabel)
			{
				<p class="label">@content.ReviewLabel</p>
			}
			<h2 class="!text-center !lg:text-start">@content.ReviewHeadline</h2>
			<div class="flex flex-col gap-4 pt-4 items-center lg:items-start">
				<p class="text-xl italic text-center lg:text-start">@content.ReviewText</p>
				<div class="flex flex-row text-text">
					@switch (content.ReviewGrade)
					{
						case "1":
							<i class="fa-solid fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							break;

						case "2":
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							break;

						case "3":
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-regular fa-star"></i>
							<i class="fa-regular fa-star"></i>
							break;

						case "4":
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-regular fa-star"></i>
							break;

						case "5":
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							<i class="fa-solid fa-star"></i>
							break;
					}
				</div>
				<p class="text-sm text-text">@content.ReviewerName</p>
				<p class="text-xl font-normal italic">@content.ReviewerCompany</p>
			</div>	
		</div>
		<div class="flex">
			<img src="@content.ReviewImage?.Url()" />
		</div>
	</div>
</section>